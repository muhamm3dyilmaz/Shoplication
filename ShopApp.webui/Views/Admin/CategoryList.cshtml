@model CategoryListViewModel

<div class="row">

    <div class="col-md-12">
        
        <h1>Admin Categories</h1>
        <hr>

        <a class="btn btn-green mb-3" href="/admin/createcategory">Create Category</a>

        <table class="table table-bordered">

            <thead>

                <tr>

                    <td style="width:75px">Id</td>
                    <td style="width:1150px">Name</td>
                    <td></td>

                </tr>

            </thead>

            <tbody>

                @if (Model.Categories.Count > 0)
                {
                    @foreach (var item in Model.Categories)
                    {
                        <tr>

                            <td>@item.CategoryId</td>
                            <td>@item.Name</td>

                            <td>
                                <a href="/admin/admincategories/@item.CategoryId" class="btn btn-green btn-sm mr-2">Edit</a>
                                
                                <form action="/admin/deletecategory" method="post" class="d-inline">
                                
                                    <input type="hidden" name="categoryId" value="@item.CategoryId">

                                    <button type="submit" class="btn btn-red btn-sm">Delete</button>
                                
                                </form>

                            </td>

                        </tr>
                    
                    }

                }

                else
                {
                    <div class="alert alert-warning">
                        <h3>No Category!</h3>
                    </div>
                }

            </tbody>

        </table>

    </div>  
        
</div>        
