@model Product

<form method="POST">
    <input type="hidden" name="ProductId" value="@Model.ProductId">

    <div class="form-group">

        <label for="Name">Name</label>
        <input asp-for="Name" value="@Model.Name" class="form-control">

    </div>

    <div class="form-group">

        <label for="Price">Price</label>
        <input asp-for="Price" value="@Model.Price" class="form-control">

    </div>

    <div class="form-group">

        <label for="Description">Description</label>
        <textarea asp-for="Description" value="@Model.Description" class="form-control"></textarea>

    </div>

    <div class="form-group">

        <label for="ImageUrl">ImageUrl</label>
        <input asp-for="ImageUrl" value="@Model.ImageUrl" class="form-control">

    </div>

    <div class="form-group">

        @* <label for="CategoryId">CategoryId</label>

        <select asp-for=CategoryId asp-items="@ViewBag.Categories" value="@Model.CategoryId" class="form-control">

            <option selected disabled>Category Choosing</option>

        </select> *@

    </div>

    <button type="submit" class="btn btn-danger">Create</button>
</form>