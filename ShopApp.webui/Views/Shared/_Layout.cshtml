<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShopApp</title>
    <link rel="stylesheet" href="/modules/bootstrap/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">

</head>
<body style="height:100vh">

    @await Html.PartialAsync("_navbar")

    <main>

        <div class="container my-4" style="max-width: 1400px !important; ">


            @if (TempData["message"] != null)
            {
                <div id="uyari" class="row">

                    <div class="col-md-12">
                        <div class="alert alert-warning">
                            @Html.Raw(TempData["message"])
                        </div>
                    </div>

                </div>

            }

            @RenderBody()       

        </div>

    </main>        

    <footer id="page-footer" class="py-5 text-center">
        <i class="fab fa-shopify"></i> Shoplication Â© 2021
    </footer>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js" ></script>
    <script src="https://kit.fontawesome.com/2ee18850f3.js" crossorigin="anonymous"></script>
    
    @RenderSection("Scripts",false)

</body>
</html> 